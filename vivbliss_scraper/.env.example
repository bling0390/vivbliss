# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DATABASE=vivbliss_db

# Telegram Configuration (Required for Telegram upload)
# Get your API credentials from https://my.telegram.org
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# Session name for Pyrogram client
TELEGRAM_SESSION_NAME=vivbliss_bot

# Optional: Bot token for bot authentication (instead of user authentication)
# Get bot token from @BotFather on Telegram
# TELEGRAM_BOT_TOKEN=123456:ABCdefGHIjklMNOpqrSTUvwxYZ

# Chat ID where files will be uploaded
TELEGRAM_CHAT_ID=your_chat_id

# Enable/disable Telegram upload functionality
TELEGRAM_ENABLE_UPLOAD=True

# Optional: Custom user agent
# USER_AGENT=MyBot 1.0 (+https://mywebsite.com)